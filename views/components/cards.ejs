<div class="course-card border rounded-lg overflow-hidden shadow hover:shadow-lg transition duration-300">
    <div class="course-image w-full h-48 overflow-hidden">
        <img src="<%= imgad %>" alt="<%= title %>" class="w-full h-full object-cover">
    </div>
    <div class="course-content p-4">
        <h3 class="course-title text-lg font-semibold mb-2"><%= title %></h3>
        <div class="course-footer flex justify-between items-center mt-2">
            <a class="btn enroll-btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition" href="<%= linkHere %>">
                Explore
            </a>
        </div>
    </div>
</div>
