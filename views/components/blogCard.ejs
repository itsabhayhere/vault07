<div class="w-full max-w-7xl bg-gradient-to-br from-cyan-50 via-slate-50 to-white border border-slate-200 rounded-2xl p-6 md:p-8 flex flex-col space-y-6 shadow-lg hover:shadow-slate-300/70 transition-all duration-300 mx-auto text-slate-800">

  <!-- Header -->
  <div class="flex items-center justify-between flex-wrap gap-2">
    <div class="flex items-center gap-2 text-slate-500">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-rose-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.239-4.5-5-4.5-1.74 0-3.265.81-4 2.028A4.498 4.498 0 008 3.75c-2.761 0-5 2.015-5 4.5 0 7.125 9 11.25 9 11.25s9-4.125 9-11.25z" />
      </svg>
      <span class="text-sm font-medium">0</span>
    </div>

    <div class="text-slate-500 text-sm flex items-center gap-2">
      <!-- <span>Nessus Professional Tool</span> -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
    </div>
  </div>

  <!-- Divider -->
  <div class="border-t border-slate-200"></div>

  <!-- Body -->
  <div class="flex flex-col-reverse md:flex-row md:items-center md:justify-between gap-8 md:gap-10">
    
    <!-- Left - Text -->
    <div class="flex-1 space-y-4">
      <h2 class="text-2xl md:text-3xl font-semibold text-cyan-700"><%= post.title %></h2>
      <p class="text-base leading-relaxed text-slate-600">
        <%= post.content.length > 300? post.content.substring(0, 300) + '...' : post.content %>
      </p>
      

 
      
      <a href="/api/blog/<%= post.slug %>">
        <button class="mt-4 px-6 py-2 bg-cyan-600 text-white text-sm font-medium rounded-md hover:bg-cyan-500 transition">
          Read more
        </button>
      </a>
    </div>

    <!-- Right - Image -->
    <div class="flex-shrink-0 mx-auto md:mx-0">
      <img
        src="<%= post.blogImage %>"
        alt="Nessus Professional"
        class="w-full max-w-[320px] md:max-w-[380px] h-auto object-contain opacity-95"
      />
    </div>
  </div>
</div>
