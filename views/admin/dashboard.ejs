        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
      <div>
        <p class="text-gray-500">Drafts</p>
        <p class="text-3xl font-bold text-gray-900"><%= stats.drafts %></p>
      </div>
    </div>
