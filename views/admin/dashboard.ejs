<h2 class="text-2xl font-semibold mb-4">Recent Visitors</h2>
<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-sm">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-4 py-2 text-left text-gray-700 font-medium border-b">IP Address</th>
        <th class="px-4 py-2 text-left text-gray-700 font-medium border-b">Country</th>
        <th class="px-4 py-2 text-left text-gray-700 font-medium border-b">Visited At</th>
      </tr>
    </thead>
    <tbody>
      <% visitors.forEach(visitor => { %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-2 border-b text-gray-800"><%= visitor.ip %></td>
          <td class="px-4 py-2 border-b text-gray-800"><%= visitor.country %></td>
          <td class="px-4 py-2 border-b text-gray-800"><%= new Date(visitor.visitedAt).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
