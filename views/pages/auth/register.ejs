<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-6">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
      <h2 class="text-3xl font-semibold text-center text-blue-600 mb-6">
        Create Your Account
      </h2>
  
      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="bg-red-100 text-red-700 p-3 rounded-md text-center mb-4">
          <%= errorMessage %>
        </div>
      <% } %>
  
      <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="bg-green-100 text-green-700 p-3 rounded-md text-center mb-4">
          <%= successMessage %>
        </div>
      <% } %>
  
      <form action="/register" method="POST" class="space-y-5">
        <div>
          <label for="name" class="block text-gray-700 font-medium mb-1">
            Full Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
            placeholder="Enter your full name"
          />
        </div>
  
        <div>
          <label for="email" class="block text-gray-700 font-medium mb-1">
            Email Address
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
            placeholder="Enter your email"
          />
        </div>
  
        <div>
          <label for="password" class="block text-gray-700 font-medium mb-1">
            Password
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"
            placeholder="Enter your password"
          />
        </div>
  
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 rounded-lg font-medium hover:bg-blue-700 transition duration-200"
        >
          Register
        </button>
      </form>
  
      <p class="text-center text-gray-600 text-sm mt-5">
        Already have an account?
        <a href="/login" class="text-blue-500 hover:underline">Login here</a>
      </p>
    </div>
  </div>
  